    <%= f.text_field :title %>
    <% end%>
  </div>
   <div class="field">
    <%= f.label :authors ,'작가'%><br>
    <% if params[:authors]%>
    <%= f.text_field :authors, value: params[:authors] %>
    <% else%>
    <%= f.text_field :authors %>
    <% end%>
  </div>
  <div class="field">
    <%= f.label :thumbnail ,'이미지'%><br>
    <% if params[:thumbnail]%>
    <%= f.text_field :thumbnail, value: params[:thumbnail] %>
    <% else%>
    <%= f.text_field :thumbnail %>
    <% end%>
  </div>
  <div class="field">
    <%= f.label :category ,'분야'%><br>
    <% if params[:category]%>
    <%= f.text_field :category, value: params[:category] %>
    <% else%>
    <%= f.text_field :category %>
    <% end%>
  </div>
   <div class="field">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  
  
  <div class="actions">
    <%= f.submit %>
  </div>
  
  

