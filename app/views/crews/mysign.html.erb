<h1>가입신청 목록</h1>

<table>
  <thead>
    <tr>
      <th>신청자</th>
      <th>비고</th>
    </tr>
  </thead>

  <tbody>
    <% @pre_member.each do |roll|%>
    <%if roll.is_signed? == "sign_ing"%>
          <tr>
            <td><%= User.find(roll.user_id).email%></td>
            <td>
                <%= form_tag("/signing") do%>
                    <%= hidden_field_tag(:user_id, User.find(roll.user_id).id) %>
                    <%= hidden_field_tag(:crew_id, @crew_id) %>
                    <%= submit_tag("승인")%>
                <% end%>
            </td>
          </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
        
    
